.header
	background transparent
	position fixed
	top 0
	width 100%
	height 60px  
	opacity 1
	z-index 9999
	transition all 0.4s
	padding 10px
	.logo
		width 30%
		height inherit
		display inline-block
		transition inherit		  
		img
			margin 0 40px
			height 60px
			//width 60px  
			//display inline-block 
			transition inherit
	.nav
		vertical-align top
		margin 20px 0
		width 40%
		height 20px
		display inline-block
		text-align center  
		transition inherit
		a
			text-decoration none
			color white
			line-height 20px
			vertical-align middle 
			padding 0 10px
			display inline-block
			font-weight 500 
			opacity 0.7
			transition inherit
			font-size 14px 
			&:hover
				opacity 1
		.active
			color #ef9a9a
			opacity 0.8 
			transition inherit
			font-weight 700 
			&:hover
				opacity 1
.landing
	width 100% 
	height 600px
	position fixed
	opacity 0.85
	overflow hidden
	.carousel
		width 100%
		height inherit 
		ul
			height inherit
			transition margin-left 1s, margin-right 1s
		.slide1, .slide2, .slide3
			-webkit-background-size cover 
			-o-background-size cover 
			background-size cover 
			height inherit
			width 1080px  
			display inline-block
			float left 
			list-style none
			text-align center 
		.slide1
			background-image url("/img/girl2.jpg") 
		.slide2
			background-image url("/img/girl3.jpg") 
		.slide3
			background-image url("/img/girl.jpg") 
.leftArrow, .rightArrow
	cursor pointer
	position absolute
	height 120px
	width 120px
	top 0
	bottom 0 
	background-image url(/img/arrow.png) 
	-webkit-background-size contain 
	-o-background-size contain 
	background-size contain 
	margin auto
	opacity 0.3
.leftArrow
	-webkit-transform scaleX(-1) 
	-moz-transform scaleX(-1) 
	-ms-transform scaleX(-1) 
	-o-transform scaleX(-1) 
	transform scaleX(-1) 
	left 20px
.rightArrow
	right 20px 
	
.girls
	width 100%
	position relative
	z-index 10
	background #fff
	.image
		float left 
		width 25%
		overflow hidden 
		height 600px
		img
			width 120% 
			margin-left -10%
	
.shrink
	height 40px
	background #1F1F1F
	transition all 0.4s
	.logo
		img
			height 40px
			transition all 0.4s
	.nav
		margin 10px 0
		transition inherit
.footer
	clear both 
	position relative
	z-index 10
	width 100% 
	background #252525
	padding-top 20px 
	.craps
		max-width 1080px
		height 160px 
		margin 0 auto
		.crap
			width 33%
			float left
			h3
				color #777
				font-weight 500
				font-size 18px 
				padding-bottom 10px 
			p
				color #ccc
				font-weight 300 
				font-size 16px 
				line-height 22px 
	.divisor
		border-top solid 1px rgba(255, 255, 255, 0.0980392)
		width 100% 
		.copy
			height 60px
			max-width 1080px
			margin 0 auto
			h3
				line-height 60px
				color #777
				font-weight 300
				font-size 14px  
			 